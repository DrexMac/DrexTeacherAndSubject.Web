@page "/teachers/soft-delete"
@model DrexTeacherAndSubject.Web.Pages.Teachers.SoftDeleteModel

<h1>Soft Delete Teacher</h1>

<div class="container mt-5">
    <h2>Are you sure you want to soft delete this Teacher?</h2>

    @if (Model.Item == null)
    {
        <p>No record found</p>
    }
    else
    {
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="Item.Id" />
                <label for="Name" class="form-label">Teacher Name</label>
                <input type="text" class="form-control" id="Name" asp-for="Item.Name" disabled />
            </div>

            <div class="form-group">
                <label for="Department" class="form-label">Department</label>
                <input type="text" class="form-control" id="Department" asp-for="Item.Department" disabled />
            </div>

            <div class="form-group">
                <a href="~/teachers" class="btn btn-success">Back</a>
                <button type="submit" class="btn btn-warning">Soft Delete</button>
            </div>
        </form>
    }
</div>
